{
  "manifest_version": 3,
  "name": "OrgTree",
  "version": "1.0",
  "description": "조직도로 수신인 이메일 자동 삽입",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "windows",
    "tabs",
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "https://cloudofficeorgtree.azurewebsites.net/",
    "runtime"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "https://mail.google.com/*",
    "http://localhost:2734/rest/*",
    "http://localhost:8090/*",
    "https://cloudofficeorgtree.azurewebsites.net/"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "https://mail.google.com/*",
        "http://localhost:8090/*",
        "https://*/*"
      ],
      "js": ["src/content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icons/icon_48.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon_ex.svg", "src/popup/popup.html"],
      "matches": ["*://mail.google.com/*"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://cloudofficeorgtree.azurewebsites.net/*", "http://localhost:8090/*"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}